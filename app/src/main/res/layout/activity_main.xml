<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="5+5"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="10"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_limpar"
            style="@style/Operators_Buton"
            android:layout_weight="3"
            android:text="C"/>

        <Button
            android:id="@+id/bt_divisao"
            style="@style/Operators_Buton"
            android:text="/"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/numero_7"
            style="@style/Numbers_Button"
            android:text="7"/>

        <Button
            android:id="@+id/numero_8"
            style="@style/Numbers_Button"
            android:text="8"/>

        <Button
            android:id="@+id/numero_9"
            style="@style/Numbers_Button"
            android:text="9"/>

        <Button
            android:id="@+id/multiplicacao"
            style="@style/Operators_Buton"
            android:text="x"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/numero_4"
            style="@style/Numbers_Button"
            android:text="4"/>

        <Button
            android:id="@+id/numero_5"
            style="@style/Numbers_Button"
            android:text="5"/>

        <Button
            android:id="@+id/numero_6"
            style="@style/Numbers_Button"
            android:text="6"/>

        <Button
            android:id="@+id/subtracao"
            style="@style/Operators_Buton"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/numero_1"
            style="@style/Numbers_Button"
            android:text="1"/>

        <Button
            android:id="@+id/numero_2"
            style="@style/Numbers_Button"
            android:text="2"/>

        <Button
            android:id="@+id/numero_3"
            style="@style/Numbers_Button"
            android:text="3"/>

        <Button
            android:id="@+id/soma"
            style="@style/Operators_Buton"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ponto"
            style="@style/Numbers_Button"
            android:text="."/>

        <Button
            android:id="@+id/numero_0"
            style="@style/Numbers_Button"
            android:text="0"/>

        <ImageView
            android:id="@+id/backspace"
            style="@style/Numbers_Button"
            android:src="@drawable/backspace"
            android:scaleType="center"/>

        <Button
            android:id="@+id/igual"
            style="@style/Operators_Buton"
            android:text="="/>

    </LinearLayout>

</LinearLayout>